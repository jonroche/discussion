				<xp:this.action>
					<xp:actionGroup>
						<xp:actionGroup
							condition="#{javascript:deviceBean.isMobile() || deviceBean.isTablet()}">
							<xe:moveTo transitionType="slide"
								direction="Left to Right" forceFullRefresh="true">
